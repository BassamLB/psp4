includes:
  - vendor/larastan/larastan/extension.neon

parameters:
  level: 7
  paths:
    - app
    - database
    - routes
  stubFiles:
    - phpstan/stubs/phpunit_testcase.stub.php
  inferPrivatePropertyTypeFromConstructor: true
  treatPhpDocTypesAsCertain: false
  ignoreErrors:
    - message: '#Undefined variable: \$this#'
      path: tests/Pest.php
  # no excludePaths configured; vendor is skipped by default
